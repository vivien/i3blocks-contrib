FORMAT=${FORMAT:-png}
IS_SAVE=${IS_SAVE:-true}
SAVE_DIR=${SAVE_DIR:-$HOME/screenshots}
BLOCK_BUTTON=${BLOCK_BUTTON:-1}

filename=$SAVE_DIR/screenshot_$(date "+%Y%m%d_%H%M%S").$FORMAT

save_to_file() {
        ACTION=$(dunstify "Screenshot Captured in Clipboard" "Click here to save ðŸ’¾ the screenshot" -A 'save_file, Save to screenshots')

        case $ACTION in
                "save_file")
			mkdir -p $SAVE_DIR
                        xclip -selection clipboard -o > "$filename"
                        ;;
        esac
}

click_screenshot() {
        case $1 in
                1) sleep 0.3 && import "$FORMAT":- | xclip -selection clipboard -t image/png &>> "$SAVE_DIR"/error.log ;;
                3) sleep 0.3 && import -window root "$FORMAT":- | xclip -selection clipboard -t image/png &>> "$SAVE_DIR"/error.log ;;
                # screenshot will be overwritten if multiple within a second.
                # Using nanoseconds format seem unnecessary
        esac
}

if click_screenshot $BLOCK_BUTTON && [[ "$IS_SAVE" = true ]]; then
        if ! command -v dunst &> /dev/null; then
                echo "dunst is not installed, can't use save on click feature" >> "$SAVE_DIR"/error.log
                exit 1
        fi
        save_to_file
fi
